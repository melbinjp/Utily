{
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@eslint/js": "^9.33.0",
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.45.0",
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.2.2",
    "globals": "^16.3.0",
    "http-server": "^14.1.1",
    "lighthouse": "^11.4.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "prettier": "^3.6.2",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-standard": "^29.0.0",
    "tailwindcss": "^4.1.12",
    "terser": "^5.28.1",
    "fontawesome-subset": "^4.6.0"
  },
  "name": "app",
  "version": "1.0.0",
  "description": "A comprehensive portal showcasing a collection of AI-powered web tools and utilities. This is the main landing page that provides access to various AI applications and tools.",
  "main": "index.js",
  "scripts": {
    "postinstall": "playwright install --with-deps",
    "test": "npm run test:e2e && npm run test:lighthouse:mobile && npm run test:lighthouse:desktop",
    "test:e2e": "playwright test",
    "test:lighthouse": "npm run test:lighthouse:mobile && npm run test:lighthouse:desktop",
    "test:lighthouse:mobile": "lhci autorun",
    "test:lighthouse:desktop": "lhci autorun --collect.settings.preset=desktop",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint . --ext js",
    "lint:css": "stylelint \"*.css\"",
    "clean": "rm -rf dist",
    "build:css": "postcss style.css -o dist/style.css",
    "build:js": "esbuild js/main.js --bundle --minify-whitespace --minify-syntax --outfile=dist/js/main.js",
    "copy:assets": "cp index.html dist/ && cp tools.json dist/ && cp site.webmanifest dist/ && cp sw.js dist/ && cp robots.txt dist/ && cp sitemap.xml dist/ && cp CNAME dist/",
    "copy:fontawesome-webfonts": "echo 'No-op'",
    "subset:fontawesome": "node subset.js",
    "build": "npm run clean && mkdir -p dist/js && npm run build:css && npm run build:js && npm run copy:assets && cp js/sw-register.js dist/js/ && npm run subset:fontawesome",
    "preview": "http-server -p 8080 dist",
    "lighthouse:mobile": "lighthouse http://localhost:8080 --output=json --output-path=./lighthouse-mobile-report.json --only-categories=performance,accessibility,best-practices,seo --chrome-flags='--headless --no-sandbox'",
    "lighthouse:desktop": "lighthouse http://localhost:8080 --output=json --output-path=./lighthouse-desktop-report.json --only-categories=performance,accessibility,best-practices,seo --chrome-flags='--headless --no-sandbox'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melbinjp/Utily.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/melbinjp/Utily/issues"
  },
  "homepage": "https://github.com/melbinjp/Utily#readme",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.0.0"
  }
}
