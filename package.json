{
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^6.0.0",
    "@tailwindcss/postcss": "^4.1.1",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.1",
    "http-server": "^14.1.1",
    "lighthouse": "^11.4.0",
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.1",
    "terser": "^5.28.1"
