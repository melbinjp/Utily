  "name": "app",
  "version": "1.0.0",
  "description": "A comprehensive portal showcasing a collection of AI-powered web tools and utilities. This is the main landing page that provides access to various AI applications and tools.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "postcss style.css -o dist/style.css",
    "build:js": "cp js/main.js dist/js/main.js",
    "build": "mkdir -p dist/js && npm run build:css && npm run build:js && cp index.html dist/ && cp js/AIToolsPortal.js js/Carousel.js js/utils.js dist/js/ && cp tools.json dist/ && cp critical.css dist/ && cp site.webmanifest dist/ && cp sw.js dist/ && cp robots.txt dist/ && cp sitemap.xml dist/ && cp CNAME dist/",
    "preview": "http-server -p 8080 dist",
    "lighthouse:mobile": "lighthouse http://localhost:8080 --output=json --output-path=./lighthouse-mobile-report.json --only-categories=performance,accessibility,best-practices,seo --chrome-flags='--headless --no-sandbox'",
    "lighthouse:desktop": "lighthouse http://localhost:8080 --output=json --output-path=./lighthouse-desktop-report.json --only-categories=performance,accessibility,best-practices,seo --chrome-flags='--headless --no-sandbox'"
  },
